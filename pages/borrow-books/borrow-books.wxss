.pic {
    position: relative;
}
.pic image {
    width: 400rpx;
}
.txt {
    position: absolute;
    right: 20%;
    top: 40%;
    /* color: #00c9a9; */
    font-size: 40rpx;
}
/* 沉浸式图书搜索样式 */
.search-container {
    height: 100px;
    width: 100%;
    position: fixed;
    bottom: 0;
}

.scan-btn {
    height: 80rpx;
    border-radius: 50rpx;
    color: #fff;
    font-size: 40rpx;
    line-height: 80rpx;
    width: 300rpx;
    padding: 10rpx 20rpx;
    margin: 0 auto;
    text-align: center;
    vertical-align: middle;
    background: #00c9a9;
}

.books-search-container {
    height: 30rpx;
    width: 200rpx;
    margin: 0 auto;
    margin-top: 20rpx;
    color: #aaa;
    font-size: 30rpx;
}

.model {
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    background: rgba(0,0,0,0.5);
}
.content {
    width: 80%;
    height: 85%;
    padding: 30rpx;
    margin: 5% auto;
    background: #fff;
    border-radius: 8px;
    position: relative;
}
.cancel {
    position: absolute;
    top: 20rpx;
    right: 40rpx;
    color: #666;
}
.title {
    width: 100%;
    text-align: center;
    font-size: 40rpx;
    margin: 60rpx 0;
}
.rules {
    width: 100%;
    text-align: center;
    font-size: 30rpx;
}
.code image{
    width: 70%;
    height: 320rpx;
    display: block;
    margin: 30rpx auto; 
}
.code input {
    padding: 2px 5px;
    border-radius: 4px;
    background: #eee;
    font-size: 30rpx;
    margin: 40rpx 20rpx;
}
.sure {
    width: 40%;
    background: #00c9a9;
    color: #fff;
    font-size: 40rpx;
    border-radius: 50rpx;
    position: absolute;
    bottom: 40rpx;
    left: 50%;
    margin-left: -20%;
}