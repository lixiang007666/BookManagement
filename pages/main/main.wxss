/* pages/books/books.wxss */
page {
    background-color: #fff;
}

.main-container {
    display: flex;
    flex-direction: column;
}

/* 沉浸式图书搜索样式 */

.search-container {
    background: #00c9a9;
    height: 50px;
    width: 100%;
    position: fixed;
    display: flex;
    flex-direction: row;
}

.books-search-container {
    display: flex;
    flex-direction: row;
    margin-left: 20rpx;
    margin-top: 5px;
    border-radius: 5px;
    height: 60rpx;
}
.books-search-container icon {
    background-color: #fff;
    padding: 15rpx;
    border-radius: 5px 0px 0px 5px;
    float: left;
}
.books-search-container input {
    width: 200px;
    height: 60rpx;
    background: #fff;
    border-radius: 0px 5px 5px 0px;
}

.classify {
    height: 60rpx;
    width: 350rpx;
    color: #fff;
    font-size: 30rpx;
    line-height: 60rpx;
    text-align: center;
    margin-top: 10rpx;
    margin-left: 20rpx;
    position: relative;
}
.view-list {
   width: 100%;
   height: 100%;
}
/* 沉浸式图书搜索样式end */

/* 分类列表样式 */
.books {
    width: 100%;
    height: 250rpx;
    margin-top: 10rpx;
    padding: 10rpx;
    border-bottom: 1px solid #ccc;
}
.book-pic {
    float: left;
    height: 250rpx;
    width: 250rpx;
}
.book-pic image {
    height: 250rpx;
    margin-left: -200rpx;
}
.book-msg {
    float: left;
    height: 230rpx;
    padding: 10rpx;
    padding-right: 80rpx;
    font-size: 26rpx;
}
.book-msg view {
    padding: 10rpx;
} 
.book-name {
    font-size: 30rpx;
    color: red;
}
/* 分类列表样式end */
.model {
    position: absolute;
    /* z-index: 99; */
    right: 0;
    top: 45px;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.5);
}
.model-content {
    width: 200px;
    height: 90vh;
    float: right;
    background: #fff;
}
.classify-item {
    padding-left: 20rpx;
    font-size: 25rpx;
    height: 30px;
    color: #000;
    line-height: 30px;
    border-bottom: 1px solid #eee;
    flex-direction: row;
}

.point {
    width: 10px;
    height: 10px;
    border-radius: 100%;
    margin-top: 10px;
    float: left;
    background: #00c9a9;
}

.name {
    margin-left: 15px;
    float: left;
}

.arrow {
    margin-right: 25px;
    float: right;
    color: #aaa;
}